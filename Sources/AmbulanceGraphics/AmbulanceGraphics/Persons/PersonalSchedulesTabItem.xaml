                <telerik:GridViewDataColumn  Header="Отсъствия в работно време" IsReadOnly="True"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>
        
        <Button Name="btnSave" Content="Запази график" Grid.Row="2"/>
        <Button Name="btnCancel" Content="Откажи промените" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</UserControl>
